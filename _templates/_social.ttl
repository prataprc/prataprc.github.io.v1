@@ shares = h.parsecsv( site.siteconfig['social_sharing'] )
<ul>
  @if 'twitter' in shares :
    <li> ${ h.readfile( h.ospath.join('_social', 'twitter.html') ) }
  @if 'google' in shares or 'g+' in shares or 'google+' in shares :
    <li> ${ h.readfile( h.ospath.join('_social', 'google+.html') ) }
  @if 'hackernews' in shares or 'hn' in shares :
    <li> ${ h.readfile( h.ospath.join('_social', 'hackernews.html') ) }
  @if 'linkedin' in shares :
    <li> ${ h.readfile( h.ospath.join('_social', 'linkedin.html') ) }
  @if 'reddit' in shares :
    <li> ${ h.readfile( h.ospath.join('_social', 'reddit.html') ) }
  @if 'facebook' in shares or 'fb' in shares :
    <li> ${ h.readfile( h.ospath.join('_social', 'facebook.html') ) }
