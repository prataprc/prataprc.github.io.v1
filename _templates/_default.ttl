@doctype html
@include ./_head.ttl
@include ./_header.ttl
@include ./_footer.ttl
    
<html>
  <head> ${ _head.body() }
  <body>
    <div #page>
      <div #header> ${ _header.body() }
      <div #container>
        @for fpath, htmltext  in page.articles :
          <article> ${ article(fpath, htmltext) }
    <hr>
    <div #footer> ${ _footer.body() }


@def article(fpath, htmltext) :
  <div .content> ${ htmltext }
  <div .lastmodified> last modified: ${last_modified}
